# Application
NODE_ENV=development
APP_NAME="Next.js SaaS Boilerplate"
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_boilerplate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=saas_boilerplate

# Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
JWT_EXPIRY=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID=price_your_subscription_price_id

# Email (Choose one provider and configure)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
# Mailjet
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
# Default sender
EMAIL_FROM=noreply@yourdomain.com

# Cloudflare R2
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ACCESS_KEY_ID=your-cloudflare-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-cloudflare-secret-access-key
CLOUDFLARE_BUCKET_NAME=your-bucket-name
CLOUDFLARE_PUBLIC_URL=https://your-public-bucket-url.com

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password
SENTRY_DSN=your-sentry-dsn
GA_MEASUREMENT_ID=your-ga-measurement-id